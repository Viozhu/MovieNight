{
	"extends": ["airbnb", "plugin:prettier/recommended"],
	"env": {
		"browser": true,
		"es6": true
	  },
	"rules": {
		"max-length": ["error", 140],
		"quotes": [2, "single", {"avoidEscape": true}]
	},
	"parserOptions": {
		"ecmaFeatures": {
		  "jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	  },
	  "plugins": [
		"react"
	  ]
}